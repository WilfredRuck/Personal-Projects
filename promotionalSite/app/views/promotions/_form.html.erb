<%= form_for @promotion, :html => { :class => "form-horizontal promotion" } do |f| %>

  <% if @promotion.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@promotion.errors.count, "error") %> prohibited this promotion from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @promotion.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :code, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :code, :class => 'form-control' %>
    </div>
    <%=f.error_span(:code) %>
  </div>
  <div class="form-group">
    <%= f.label :resource, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :resource, :class => 'form-control' %>
    </div>
    <%=f.error_span(:resource) %>
  </div>
  <div class="form-group">
    <%= f.label :notes, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :notes, :class => 'form-control' %>
    </div>
    <%=f.error_span(:notes) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                promotions_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
