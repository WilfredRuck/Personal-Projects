<h1>Products</h1>

<% @products.each do |product| %>
	<br>

		<p> <%= product.name %>: $<%= product.price %> </p>
		<p> <%= product.description %> </p>
		<%= product.id %>
		<%= button_to "Product Details", charge_path(product), :method => "get" %>
		<%= button_to "Buy", new_charge_path, :method => "get" %>
	<br>

<%end%>