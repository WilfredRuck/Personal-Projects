
<%= form_tag charges_path do %>
	<article>
		<% if flash[:error].present? %>
		
			<div id="error_explanation">
				<p> <%= flash[:error] %> </p>
			</div>

		<% end %>
		
		<label class="amount">
			<span> Amount: $0.50 </span>
			<%= @newAmount%>
			<p> (if you would like to change this amount, enter the new amount at the bottom) </p>
		</label>
	</article>

	<script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
	data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
	data-description="Single Donation to Admin"
	data-amount="50"
	data-locale="auto">
	</script>
<% end %>

<br>
