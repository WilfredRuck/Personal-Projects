<body class="new-chatbox-page">
	<div>
		<% flash.each do |key, value| %>
	    	<p class="alert alert-<%= key %>"><%= value %></p>
		<% end %>
	</div>
	
	<div class="container">
		<div class="border">
			
			<div class="center">
				<h2 class="logo-landing">New ChatBox</h2>
			</div>
			
			<div class="center">
				<%= form_for @chat_room, url: { :action => :create } do |f| %>
					<div>
						<%= f.label :title %><br />
						<%= f.text_field :title, auto_focus: true %>
					</div><br />
					
					<div>
						<%= f.submit "Create ChatBox", :class => "btn btn-primary" %>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</body>